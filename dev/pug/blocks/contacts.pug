mixin contacts()
  #contacts.contacts-section
    .container
      section.contact-card
        header.contact-card__header
          h2 Contact information
          h4 Please reach out any time!
        .contact-info
          .contact-info__logo DC
          .contact-info__group
            .contact-info__vcard.vcard
              h4.fn.org Daley Crowley
              p.role.title Content And Marketing Strategist
              p.icon.icon_location
                a.adr.js-anchor(href="#gmap")
                  span.country-name USA
                  | ,&nbsp;
                  span.locality Boulder
              p.icon.icon_mail
                a.email(href="daleycrowley@yahoo.com") daleycrowley@yahoo.com
            ul.contact-info__social
              li
                a.icon.icon_twi(rel="nofollow") My Twitter
              li
                a.icon.icon_in(rel="nofollow") My Linkedin profile
    #gmap.gmap
    //- insert photo section here instead
